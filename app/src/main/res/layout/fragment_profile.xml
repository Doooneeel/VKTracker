<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ru.vktracker.core.ui.view.image.ImageView
            android:id="@+id/avatarImageView"
            app:enableSkeleton="true"
            android:layout_width="@dimen/icon_normal"
            android:layout_height="@dimen/icon_normal"
            android:layout_margin="@dimen/distance_medium"
            app:shapeAppearanceOverlay="@style/ThemeOverlayRoundedImageView" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ru.vktracker.core.ui.view.text.SkeletonTextView
                android:id="@+id/usernameTextView"
                style="@style/MarqueeTextStyle"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                app:enableSkeleton="true"
                tools:text="######## ########" />

            <ru.vktracker.core.ui.view.text.SkeletonTextView
                android:id="@+id/userIdTextView"
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_tiny"
                android:layout_marginEnd="@dimen/distance_medium"
                android:singleLine="true"
                android:textStyle="bold"
                app:enableSkeleton="true"
                tools:text="########" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logoutImageButton"
            style="@style/ThemeOverlay.Material3.Button.ElevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/distance_medium"
            android:layout_weight="0"
            android:text="@string/logout"
            app:icon="@drawable/ic_logout" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:paddingTop="@dimen/distance_normal">

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/distance_normal"
            app:cardElevation="2dp"
            app:strokeColor="?attr/colorOnSecondaryFixedVariant">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/settingsMenuItemLayout"
                    layout="@layout/layout_profile_menu_item" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dividerColor="?attr/colorOnSecondaryFixedVariant" />

                <include
                    android:id="@+id/statisticsMenuItemLayout"
                    layout="@layout/layout_profile_menu_item" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dividerColor="?attr/colorOnSecondaryFixedVariant" />

                <include
                    android:id="@+id/aboutMenuitemLayout"
                    layout="@layout/layout_profile_menu_item" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>

    </androidx.core.widget.NestedScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>