<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile"
    app:startDestination="@id/navigation_profile">

    <fragment
        android:id="@+id/navigation_profile"
        android:name="ru.vktracker.feature.profile.ui.ProfileFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profile_to_statistics"
            app:destination="@id/statisticsFragment" />

        <action
            android:id="@+id/action_profile_to_about_app"
            app:destination="@id/aboutAppFragment" />

        <action
            android:id="@+id/action_profile_to_settings"
            app:destination="@id/settingsFragment" />

    </fragment>

    <fragment
        android:id="@+id/aboutAppFragment"
        android:name="ru.vktracker.feature.about.ui.AboutAppFragment"
        android:label="AboutAppFragment">

        <action
            android:id="@+id/action_aboutAppFragment_to_navigation_profile"
            app:destination="@id/navigation_profile" />

    </fragment>

    <fragment
        android:id="@+id/statisticsFragment"
        android:name="ru.vktracker.feature.statistics.ui.StatisticsFragment"
        android:label="StatisticsFragment">

        <action
            android:id="@+id/action_statisticsFragment_to_navigation_profile"
            app:destination="@id/navigation_profile" />

    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="ru.vktracker.feature.settings.ui.SettingsFragment"
        android:label="SettingsFragment">

        <action
            android:id="@+id/action_settingsFragment_to_navigation_profile"
            app:destination="@id/navigation_profile" />

    </fragment>

</navigation>